{
  "name": "ultra-ace",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "ui": "npm --workspace apps/ultra-ace-ui start",
    "engine:simulate": "npm --workspace packages/engine run simulate",
    "build:engine": "npm run build --workspace=@ultra-ace/engine",
    "build:web": "npm run build --workspace=ultra-ace-web",
    "build": "npm run build:engine && npm run build:web"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.7.4"
  }
}
