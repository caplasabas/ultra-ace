{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@ultra-ace/engine": ["packages/engine/src/index.ts"]
    }
  },
  "include": ["packages/**/*", "apps/**/*"]
}
